{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "rootDir": "src",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["vscode", "node"],
    "strict": true,
    "outDir": "out",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "out",
    "esbuild.extension.js",
    "src/webview/esbuild.webview.js",
    "src/webview/**/*"
  ],
  "references": [
    {
      "path": "./src/webview"
    }
  ]
}
